
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>ReleaseDate</th>
            </tr>
        </thead>
        <tbody>
            @if(Games is null)
            {
                <tr>Loading data . . .</tr>
            }
            else if (Games.Count == 0)
            {
                <tr>There are not in collestion</tr>

            }
            else 
            {
                @foreach (var item in Games)
                {
                   <GameOne game="item" IsTable = "true"/>
                }
            }
        </tbody>
    </table>
</div>

@code {

    [Parameter] public List<Game> Games { get; set; }

   
}